{% extends 'base.html.twig' %}

{% block title %}Village{% endblock %}

{% block main %}
    <h1>Village</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ village.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ village.name }}</td>
            </tr>
            <tr>
                <th>Cards</th>
                {% for card in village.cards %}
                    <td>{{ card.name }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_village_index') }}">back to list</a>

    <a href="{{ path('app_village_edit', {'id': village.id}) }}">edit</a>

    {{ include('village/_delete_form.html.twig') }}
{% endblock %}
