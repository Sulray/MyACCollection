{% extends 'base.html.twig' %}

{% block title %}Village{% endblock %}

{% block main %}
    <h1>Village</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ village.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ village.name }}</td>
            </tr>
            <tr>
                <th>Cards</th>
                <td>
                    {% for card in village.cards %}
                        <li><a href="{{ path('app_card_show', {'id' : card.id}) }}">{{ card }}</a></li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_village_edit', {'id': village.id}) }}">edit</a>

    <a class="btn btn-primary" href="{{ path('app_card_new', {'id': village.id}) }}"> add new card </a>

    <a class="btn btn-primary" href="{{ path('app_village_index') }}">back to list</a>

    <br>
    <br>

    {{ include('village/_delete_form.html.twig') }}
{% endblock %}
