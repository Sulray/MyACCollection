{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block main %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Series</th>
                <td>{{ card.series }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ card.species }}</td>
            </tr>
            <tr>
                <th>Village</th>
                <td>{{ card.village.name }}</td>
            </tr>
            <tr>
                <th>Personalities</th>
                <td>{{ card.personalities|join(', ') }}</td>
            </tr>
            <tr>
                <th>Galleries</th>
                <td>{{ card.galleries|join(', ') }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_card_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_card_edit', {'id': card.id}) }}">edit</a>

    {{ include('card/_delete_form.html.twig') }}
{% endblock %}
