{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block main %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery.description }}</td>
            </tr>
            <tr>
                <th>Creator</th>
                <td>{{ gallery.member.name }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ gallery.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cards</th>
                {% for card in gallery.cards %}
                <td>{{ card.name }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gallery_index') }}">back to list</a>

    <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
