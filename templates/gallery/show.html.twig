{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block main %}
    <h1>{{ gallery.name }}</h1>

    {% dump gallery %}

    <h2> <a href="{{  path('member_show',{'id':gallery.member.id}) }}"> {{ gallery.member.name }} </a> </h2>




    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Card</th>
        </tr>
        </thead>
        <tbody>

        {% for card in gallery.cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td><a href="{{  path('card_show',{'id':card.id}) }}">{{ card.name }}</a> </td>
            </tr>
        {% endfor %} {# cards #}

        </tbody>
    </table>

    <a href="{{ path('gallery_index') }}">back to list</a>

{% endblock %}